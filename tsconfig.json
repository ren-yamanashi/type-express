{
  "include": ["src/**/*", "examples"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "typeExpress": ["./src/index.ts"]
    },
    "target": "ES2018",
    "module": "ESNext",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "/",
    "moduleResolution": "node"
  }
}
