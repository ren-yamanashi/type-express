{
  "include": ["src/**/*", "examples"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "typeExpress": ["src"]
    },
    "target": "es2016",
    "module": "commonjs",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "/"
  }
}
